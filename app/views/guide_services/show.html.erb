<div class="pull-right"><%= link_to "All Guide Services", climbs_path  %></div>
<!-- Header -->
<div id="top_bar" class="pull-right">
  <%= link_to image_tag("logo.png", size: "120x40"), home_index_path %>
  <h5 class="quote"> - When the summit calls, we answer - </h5>
  <div class="pull-right user-info">
    <% if user_signed_in? %>
    <strong><big> <%= current_user.first_name%> </big></strong> |
    <%= link_to 'Profile', current_user, :class => 'navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> -
    <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
    <% end %>
  </div>
</div>
<!-- Header -->

<h1 class="quote"><strong><%= @guide_service.name %></strong></h1>

<div class="divider"></div>

<div class="container">
  <ul>
    <p><em><%= @guide_service.description%></em></p>
    <p>Website: <a href="<%=@guide_service.website%>"><strong><%= @guide_service.website %></a></strong></p>
    <p>Email: <a href="mailto:<%=@guide_service.email%>"><strong><%= @guide_service.email %></a></strong></p>
    <p>Phone: <a href="tel:<%=@guide_service.phone%>"><strong><%= @guide_service.phone %></strong></a></p>
    <p>Address: <%= @guide_service.address %>
    <%= @guide_service.city %>
    <%= @guide_service.zip %>
    <%= @guide_service.country %></p>
  </ul>
</div>

    <table style="width:50%">
      <tr>
        <th></th>
        <th>Route</th>
        <th>Date</th>
        <th>Days</th>
        <th>Price</th>
      </tr>
      <%  @guide_service.climbs.each do |climb| %>
      <tr>
        <td><%= link_to climb.title, climb %></td>
        <td><%= climb.route %></td>
        <td><%= climb.date %></td>
        <td><%= climb.days %> days</td>
        <td>$ <%= number_with_precision(climb.price, :precision => 2, :delimiter => ',') %></td>
      </tr>
      <% end %>
    </table>
