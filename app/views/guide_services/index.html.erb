<!-- Header -->
<div id="top_bar" class="pull-right">
  <%= link_to image_tag("Summit Call Logo 4.png", size: "120x40"), home_index_path %>
  <h5 class="quote"> - When the summit calls, we answer - </h5>
  <div class="pull-right user-info">
    <% if user_signed_in? %>
    <strong><big> <%= current_user.first_name%> </big></strong> |
    <%= link_to 'Profile', current_user, :class => 'navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> -
    <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
    <% end %>
  </div>
</div>
<!-- Header -->
<h2>Guiding Services</h2>

<div class="divider"></div>

<div class="container">
  <table id="table_list" class="table table-bordered" style="width:100%">
   <thead>
    <tr>
      <th><%= sort_link "Name" %></th>
      <th><%= sort_link "City" %></th>
      <th><%= sort_link "Country" %></th>
      <th><%= "Email" %></th>
      <th><%= "Phone" %></th>
    </tr>
    </thead>
    <% @guide_services.each do |gs| %>
    <tr>
      <td><%= link_to gs.name, gs %></td>
      <td><%= gs.city %></td>
      <td><%= gs.country %></td>
      <td><a href="mailto:<%=gs.email%>"><%= gs.email %></td>
      <td><a href="tel:<%=gs.phone%>"><%=gs.phone%></a></td>
    </tr>
    <% end %>
  </table>
    <%= will_paginate @gs, renderer: BootstrapPagination::Rails %>
  </div>

  <div style="background-color: transparent">
    <div class="row pull-right"><small><em>
      Are you a guide or a guiding business? </em><button type="button xsm" class="btn btn-info btn-sm"><%=link_to "Sign me up now!", new_mountain_path %></button>
    </small></div>
  </div>
