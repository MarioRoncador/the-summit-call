<!-- Header -->
<div id="top_bar" class="pull-right">
  <%= link_to image_tag("logo.png", size: "120x40"), home_index_path %>
  <h5 class="quote"> - When the summit calls, we answer - </h5>
  <div class="pull-right user-info">
    <% if user_signed_in? %>
    <strong><big> <%= current_user.first_name%> </big></strong> |
    <%= link_to 'Profile', current_user, :class => 'navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> -
    <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
    <% end %>
  </div>
</div>
<!-- Header -->
<h2 class="quote">New Mountain</h2>

<%if current_user.present?%>
          <%= render partial: 'mountains/form' %>
<%else%>
  Sign in or sign up before proceeding:
  <button type="button" class="btn btn-info"><%=link_to "Sign in", new_user_session_path %></button>
  <button type="button" class="btn btn-info"><%=link_to "Sign up", new_user_registration_path %></button>
<%end%>
