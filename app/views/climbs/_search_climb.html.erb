
<% if @mountain.present?  %>
  <% if @mountain.climbs.exists? %>
  <table style="width:50%">
    <tr>
      <th></th>
      <th><%=t('climb-route')%></th>
      <th><%=t('climb-date')%></th>
      <th><%=t('climb-days')%></th>
      <th><%=t('climb-price')%></th>
    </tr>
    <%  @mountain.climbs.each do |climb| %>
    <tr>
      <td><%= link_to climb.title, climb %></td>
      <td><%= climb.route %></td>
      <td><%= climb.date %></td>
      <td><%= climb.days %> days</td>
      <td>$ <%= number_with_precision(climb.price, :precision => 2, :delimiter => ',') %></td>
    </tr>
    <% end %>
  </table>
  <% else %>
   <p><%=t('call-us')%>: <a href="tel:+19073467010">+1 (907) 340-7010</a></p>
  <% end %>
<% else %>
<p><%=t('search-adventure')%></p>
<% end %>
